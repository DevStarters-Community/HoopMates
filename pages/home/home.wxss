/* pages/home/home.wxss */
image {
  width: 100%;
}

.custom-swiper {
  margin: 0 20px;
  border-radius: 15px;
  overflow: hidden;
}

.kingkong-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px;
}

.kingkong-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 18%;
  margin-bottom: 10px;
  margin-right: 1px;
  text-align: center;
  padding: 20px 0;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.icon {
  width: 24px;
  height: 24px;
  margin-bottom: 10px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.view-all {
  font-size: 14px;
  color: #999;
}

.live-container {
  display: flex;
  justify-content: center;
  margin: 0 20px;
}

.live-item {
  margin: 10px;
  max-width: 45%;
}

