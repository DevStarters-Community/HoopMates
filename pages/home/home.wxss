/* pages/home/home.wxss */
image {
  width: 100%;
}

.kingkong-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px;
}

.kingkong-item {
  width: 18%;
  margin-bottom: 10px;
  margin-right: 1px;
  text-align: center;
  padding: 20px 0;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.view-all {
  font-size: 14px;
  color: #999;
}