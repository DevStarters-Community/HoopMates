/* pages/my-profile/my-profile.wxss */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.nickname {
  font-size: 18px;
  color: #333;
  margin-bottom: 5px;
}

.level {
  font-size: 14px;
  color: #666;
}

.get-profile-btn {
  margin-top: 10px;
  padding: 5px 10px;
  background-color: #1a73e8;
  color: white;
  border-radius: 5px;
}

.activities-section {
  margin-top: 20px;
}

.section-title {
  font-size: 20px;
  color: #333;
  padding: 10px;
}

.activity {
  padding: 10px;
  border-bottom: 1px solid #eee;
}